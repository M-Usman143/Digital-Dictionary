<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color of the search bar -->
    <solid android:color="#FFFFFF" /> <!-- White background -->

    <!-- Rounded corners -->
    <corners android:radius="25dp" />

    <!-- Optional: Add a stroke (border) around the search bar -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Light gray border -->

    <!-- Optional: Add padding inside the search bar -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
